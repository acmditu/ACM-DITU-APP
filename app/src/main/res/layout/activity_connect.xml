<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".Connect">

    <TextView
        android:id="@+id/StayConnected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:maxLines="1"
        android:shadowColor="#696969"
        android:text="@string/stay_connected_with_members"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ChairPerson"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@+id/StayConnected"
        android:layout_alignParentLeft="true"
        android:src="@drawable/tim" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/viceChairPerson"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@+id/StayConnected"
        android:layout_alignParentRight="true"
        android:src="@drawable/minion" />

    <TextView
        android:id="@+id/Sakshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChairPerson"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:text="Sakshi Negi"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/Himanshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viceChairPerson"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:text="Himanshu Arora"
        android:textColor="#000000"
        android:textSize="30dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Secretary"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@+id/Himanshu"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="200dp"
        android:src="@drawable/mickey" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Treasurer"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@+id/Himanshu"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="200dp"
        android:src="@drawable/shinchan" />

    <TextView
        android:id="@+id/Shruti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Secretary"
        android:padding="10dp"
        android:text="Shruti Bisht"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/Shreya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Treasurer"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:text="Shreya Joshi"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/forwardbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginText"
        android:layout_marginLeft="220dp"
        android:background="@drawable/roundstyle"
        android:padding="10dp"
        android:text=">>"
        android:textColor="#87ceeb"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/backwardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AlreadyHaveAnAccount"
        android:layout_marginLeft="120dp"
        android:background="@drawable/roundstyle"
        android:gravity="bottom"
        android:padding="10dp"
        android:text="@string/text"
        android:textColor="#87ceeb"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/AlreadyHaveAnAccount"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="Do you have account already?"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="20dp"
        android:text="LOG IN"
        android:textColor="@color/black"
        android:textSize="15dp" />
</RelativeLayout>